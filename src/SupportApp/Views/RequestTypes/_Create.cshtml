@model RequestTypeViewModel
<partial name="_CustomValidationSummary" />
<form asp-action="AddRequestType" method="post">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                @if (Model.Id == 0)
                {
                    <h4 class="modal-title">ایجاد یک نوع درخواست جدید</h4>
                }
                else
                {
                    <h4 class="modal-title">ویرایش یک نوع درخواست</h4>
                }
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <label asp-for="Name" class="col-md-3 col-form-label text-md-left"></label>
                    <div class="col-md-9">
                        <input asp-for="Id" />
                        <input dir="rtl" asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-md-3 col-form-label text-md-left"></label>
                    <div class="col-md-9">
                        <textarea dir="rtl" asp-for="Description" class="form-control"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" type="submit">ثبت</button>
                <button class="btn" data-dismiss="modal" aria-hidden="true">انصراف</button>
            </div>
        </div>
    </div>
</form>